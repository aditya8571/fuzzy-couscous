#include<stdio.h>
int inputarray(int m,int a[])
{ printf("enter the elements of the array\n");
        for(int i=0;i<m;i++)
        { scanf("%d",&a[i]);
        } return 0;
}
int sumarray(int m,int a[])
{
 int sum=0;
 for(int i=0;i<=m;i++)
 { sum=sum+a[i];
 } return sum;

}
void output(int m,int a[])
{ printf("the enterred array is \n");
        for(int i=0;i<=m;i++)
        { printf("%d",a[i]);
        }
int sum1=sumarray(m,a);
printf("the sum of the numberrs are \n");
printf("%d\n",sum1);

}
int main()
{ int n;
        printf("enter the number of elements\n");
        scanf("%d",&n);
        int a[n];
        inputarray(n,a);
        output(n,a);
}
